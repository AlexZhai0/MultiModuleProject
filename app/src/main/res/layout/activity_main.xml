<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/buttonThisProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转当前工程的其他 Activity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/buttonModule1Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转 Module1 Activity"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonThisProject"/>

    <Button
            android:id="@+id/buttonModule2Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转 Module2 Activity"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonModule1Project"/>

</androidx.constraintlayout.widget.ConstraintLayout>